<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, height=device-height, initial-scale=1.0, minimum-scale=1.0">
    <title>@ViewData["Title"] - FunpayGold</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" 
        rel="stylesheet" 
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" 
        crossorigin="anonymous">

    <link rel="stylesheet" href="~/css/fontawesome.min.css"/>
    <link rel="stylesheet" href="~/css/fontawesome_brands.min.css"/>
    <link rel="stylesheet" href="~/css/fontawesome_solid.min.css"/>
    <link rel="stylesheet" href="~/css/dropstyles.css" type="text/css"/>
    <link rel="stylesheet" href="~/css/wrapper.css" type="text/css"/>
    <link rel="stylesheet" href="~/css/header.css" type="text/css"/>
    <link rel="stylesheet" href="~/css/main.css" type="text/css"/>
    <link rel="stylesheet" href="~/css/footer.css" type="text/css"/>

</head>
<body>

<div class="wrapper">

    <header class="header">

        <div class="header_bufl">

        </div>

        <div class="header_center">
            <div><p>FunpayGold</p></div>
        </div>

        <div class="header_right">
            <div>
            <ul class="header_ul">

                @{  
                    if (!User.Identity.IsAuthenticated)
                    {
                            <li><a href="">Войти</a></li>
                    }
                    else
                    {
                        if(User.IsInRole("admin"))
                        {
                            <li><a href="/AdminPanel">Админ Панель</a></li>
                        }
                            <li><a href="/Cabinet">Кабинет</a></li>

                            <li><a href="/Cabinet/Logout">Выйти</a></li>
                    }
                }

            </ul>
            </div>
        </div>

        <div class="header_bufr">

        </div>

    </header>


    <main class="main">
        @RenderBody()
    </main>
    

    <footer class="footer">
        <div><p>FunplayGold 2022</p></div>
    </footer>

</div>

@await RenderSectionAsync("Scripts", required: false)
</body>
</html>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js" 
integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF" 
crossorigin="anonymous"></script>

